{% extends 'base.html.twig' %}

{% block title %}Admin utilisateurs{% endblock %}

{% block idPageContent %}admin-users{% endblock %}

{% block body %}
    <table>
        <thead>
            <th>ID</th>
            <th>Email</th>
            <th>RÃ´les</th>
            <th></th>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                        {% for role in user.roles %}
                            {% if role == "ROLE_USER" %}
                                Utilisateur
                            {% elseif role == "ROLE_EDITOR" %}
                                Editeur
                            {% elseif role == "ROLE_ADMIN" %}
                                Administrateur
                            {% endif %}
                        {% endfor %}
                    </td>
                    <td><a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="link">Modifier</a></td>
                </tr>
                
            {% else %}
                <p>Aucun utilisateur inscrit</p>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}